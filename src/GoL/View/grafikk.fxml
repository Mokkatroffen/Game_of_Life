            <VBox prefHeight="76.0" prefWidth="133.0">
               <children>
                  <CheckBox fx:id="drawGrid" mnemonicParsing="false" onAction="#setGrid" prefHeight="76.0" prefWidth="104.0" text="Grid">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                  </CheckBox>
               <Button mnemonicParsing="false" onAction="#readGameBoardFromURL" prefHeight="82.0" prefWidth="188.0" text="Load URL">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
             <VBox prefHeight="83.0" prefWidth="160.0">
                 <children>
                     <CheckBox fx:id="getLSD" mnemonicParsing="false" text="LSD mode" />
                 </children></VBox>
             <VBox prefHeight="83.0" prefWidth="160.0">
                 <children>
                     <CheckBox fx:id="setStatic" mnemonicParsing="false" text="Static" onAction="#setStatic" />
