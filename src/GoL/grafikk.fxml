<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GoL.Controller">
   <center>
      <AnchorPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <children>
            <Canvas fx:id="canvas" height="500.0" width="500.0" />
         </children>
      </AnchorPane>
   </center>
   <bottom>
      <HBox prefHeight="83.0" prefWidth="900.0" BorderPane.alignment="CENTER">
         <children>
            <VBox prefHeight="83.0" prefWidth="88.0">
               <children>
                  <Button fx:id="startButton" mnemonicParsing="false" onAction="#start" prefHeight="83.0" prefWidth="88.0" text="Start">
                     <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </VBox>
            <VBox prefHeight="86.0" prefWidth="63.0">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
               <children>
                  <Button mnemonicParsing="false" onAction="#fileOpener" prefHeight="64.0" prefWidth="63.0" text="Load">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="nextGenButton" mnemonicParsing="false" onAction="#NextGen" prefHeight="70.0" prefWidth="63.0" text="NextGen">
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
            <VBox prefHeight="83.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="34.0" prefWidth="152.0" spacing="10.0">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                     <children>
                        <Label text="Speed">
                           <font>
                              <Font name="Arial" size="18.0" />
                           </font>
                        </Label>
                        <Label fx:id="speedometer" alignment="CENTER_RIGHT" text="5 frames">
                           <font>
                              <Font name="Arial" size="14.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="10.0" top="4.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
                  <Slider fx:id="slider" blockIncrement="5.0" majorTickUnit="10.0" max="45.0" min="5.0" minorTickCount="1" prefHeight="14.0" prefWidth="165.0" showTickMarks="true" snapToTicks="true" value="5.0">
                     <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                     </VBox.margin>
                  </Slider>
               </children>
            </VBox>
            <VBox prefHeight="83.0" prefWidth="200.0">
               <children>
                  <Label prefHeight="34.0" prefWidth="124.0" text="Size">
                     <VBox.margin>
                        <Insets left="20.0" />
                     </VBox.margin>
                     <font>
                        <Font name="Arial" size="18.0" />
                     </font>
                  </Label>
                  <MenuButton mnemonicParsing="false" prefHeight="0.0" prefWidth="99.0" text="Small">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Medium" />
                      <MenuItem mnemonicParsing="false" text="Large" />
                    </items>
                     <VBox.margin>
                        <Insets bottom="20.0" left="20.0" />
                     </VBox.margin>
                  </MenuButton>
               </children>
            </VBox>
            <VBox prefHeight="83.0" prefWidth="160.0">
               <children>
                  <Button fx:id="URLbutton" mnemonicParsing="false" onAction="#readGameBoardFromURL" prefHeight="82.0" prefWidth="188.0" text="Load URL">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </HBox>
   </bottom>
</BorderPane>
